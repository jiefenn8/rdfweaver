<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="RDFWeaver" packages="org.apache.logging.log4j.test">
    <Properties>
        <Property name="log-path">logs/</Property>
        <Property name="filename">app</Property>
        <Property name="file-pattern">%d{yyyy-MM-dd-HH}_%i</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss,SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <RollingFile
                name="AppFile" fileName="${log-path}${filename}.log"
                filePattern="${log-path}${file-name}-${file-pattern}.log.gz" append="false">
            <PatternLayout pattern="%d{HH:mm:ss,SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <OnStartupTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="250 MB"/>
            </Policies>
            <DefaultRollOverStrategy max="20"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="Console" level="warn"/>
            <AppenderRef ref="AppFile" level="warn"/>
        </Root>
    </Loggers>
</Configuration>